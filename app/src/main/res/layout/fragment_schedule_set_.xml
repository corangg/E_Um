<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <data>
      <variable
          name="viewmodel"
          type="com.example.appointment.viewmodel.MainViewModel" />

   </data>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@drawable/background_profile"
       android:orientation="vertical"
       android:paddingHorizontal="24dp"
       android:paddingVertical="50dp"
       android:id="@+id/schedule_set"
       tools:context=".ui.fragment.schedule.ScheduleSet_Fragment">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
         android:orientation="horizontal">

         <ImageView
             android:layout_width="34dp"
             android:layout_height="34dp"
            android:background="@drawable/ic_calendar"
            android:backgroundTint="@color/themecolor"
             android:layout_marginLeft="10dp"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"

             android:text="@={viewmodel.scheduleDate}"
             android:textColor="@color/themecolor"
             android:gravity="center"
             android:textSize="24dp"
             android:layout_marginLeft="10dp"/>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="20dp"
          android:gravity="center_vertical">
         <ImageView
             android:layout_width="34dp"
             android:layout_height="34dp"
             android:background="@drawable/ic_clock"
             android:backgroundTint="@color/themecolor"
             android:layout_marginLeft="10dp"/>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_marginLeft="20dp">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="60dp"
                android:layout_height="22dp"
                android:id="@+id/btn_Am"
                android:text="am"
                android:textAllCaps="false"
                android:background="@drawable/btn_round_gray"
                android:textColor="@color/themecolor"
                android:onClick="@{()->viewmodel.fnScheduleAmPmSet(true)}"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="60dp"
                android:layout_height="22dp"
                android:id="@+id/btn_Pm"
                android:layout_gravity="bottom"
                android:layout_marginTop="6dp"
                android:text="pm"
                android:textAllCaps="false"
                android:background="@drawable/btn_round_gray"
                android:textColor="@color/themecolor"
                android:onClick="@{()->viewmodel.fnScheduleAmPmSet(false)}"/>
         </LinearLayout>



         <EditText

             android:layout_width="40dp"
             android:layout_height="wrap_content"
             android:id="@+id/edit_HH"
             android:hint="0"
             android:textColorHint="@color/themecolor"
             android:inputType="number"
             android:textSize="20dp"
             android:gravity="center"
             android:maxLength="2"
             android:text="@={viewmodel.scheduleHH}"
             android:textColor="@color/themecolor"
             android:layout_marginLeft="20dp" />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text=":"
             android:textColor="@color/themecolor"
             android:textSize="20dp"
             android:layout_gravity="center"
             android:layout_marginLeft="10dp"/>

         <EditText
             android:layout_width="40dp"
             android:layout_height="wrap_content"
             android:id="@+id/edit_MM"
             android:hint="00"
             android:textColorHint="@color/themecolor"
             android:inputType="number"
             android:textSize="20dp"
             android:text="@={viewmodel.scheduleMM}"
             android:gravity="center"
             android:maxLength="2"
             android:textColor="@color/themecolor"
             android:layout_marginLeft="10dp" />

      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:orientation="horizontal"
          android:gravity="center_vertical">

         <ImageView
             android:layout_width="34dp"
             android:layout_height="34dp"
             android:background="@drawable/ic_location"
             android:backgroundTint="@color/themecolor"
             android:layout_marginLeft="10dp"/>
         <com.google.android.material.textfield.TextInputLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="2"
             android:paddingLeft="20dp"
             android:paddingBottom="10dp"
             app:hintTextColor="@color/themecolor"
             android:textColorHint="@color/themecolor">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0000ff00"
                android:focusable="false"
                android:inputType="text"
                android:hint="출발 장소"
                android:textSize="20dp"
                android:textColor="@color/themecolor"
                android:text="@={viewmodel.profileAddress}"/>
         </com.google.android.material.textfield.TextInputLayout>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
         android:orientation="horizontal"
          android:gravity="center_vertical">

         <ImageView
             android:layout_width="34dp"
             android:layout_height="34dp"
             android:background="@drawable/ic_location"
             android:backgroundTint="@color/themecolor"
             android:layout_marginLeft="10dp"/>

         <com.google.android.material.textfield.TextInputLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="2"
             android:paddingLeft="20dp"
             android:paddingBottom="10dp"
             app:hintTextColor="@color/themecolor"
             android:textColorHint="@color/themecolor">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_SchduleLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0000ff00"
                android:inputType="text"
                android:editable="false"
                android:focusable="false"
                android:hint="약속 장소"
                android:textSize="20dp"
                android:text="@={viewmodel.meetingPlaceAddress}"
                android:textColor="@color/themecolor"
                android:onClick="@{()->viewmodel.fnStartScheduleMapActivity(viewmodel.startScheduleMapActivity)}"/>
         </com.google.android.material.textfield.TextInputLayout>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:orientation="horizontal">

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/btn_round"
             android:orientation="vertical"
             android:onClick="@{()->viewmodel.fnPublicTransportTimeSet()}">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_bus"
                android:src="@drawable/ic_bus"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="18dp"
                android:tint="@color/gary"
                tools:ignore="UseAppTint"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/text_bus"
                android:text="@={viewmodel.publicTransportTime}"
                android:gravity="center"
                android:textColor="@color/gary"
                android:layout_marginVertical="10dp"
                android:textSize="12dp"/>

         </LinearLayout>
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:background="@drawable/btn_round"
             android:orientation="vertical"
             android:onClick="@{()->viewmodel.fnCarTimeSet()}"
             >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_car"
                android:src="@drawable/ic_car"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="18dp"
                android:tint="@color/gary"
                tools:ignore="UseAppTint"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/text_car"
                android:text="@={viewmodel.carTime}"
                android:gravity="center"
                android:textColor="@color/gary"
                android:layout_marginVertical="10dp"
                android:textSize="10dp"/>

         </LinearLayout>
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:background="@drawable/btn_round"
             android:orientation="vertical"
             android:onClick="@{()->viewmodel.fnWalkingTimeSet()}">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_walk"
                android:id="@+id/img_walk"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="18dp"
                android:tint="@color/gary"
                tools:ignore="UseAppTint"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/text_walk"
                android:text="@={viewmodel.walkTime}"
                android:gravity="center"
                android:textColor="@color/gary"
                android:layout_marginVertical="10dp"
                android:textSize="10dp"/>

         </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="20dp"
          android:gravity="center_vertical">
         <ImageView
             android:layout_width="34dp"
             android:layout_height="34dp"
             android:background="@drawable/ic_actionbar_alarm"
             android:backgroundTint="@color/themecolor"
             android:layout_marginLeft="10dp"/>


         <EditText
             android:layout_width="40dp"
             android:layout_height="wrap_content"
             android:id="@+id/edit_Alarm_HH"
             android:hint="00"
             android:textColorHint="@color/themecolor"
             android:inputType="number"
             android:textSize="20dp"
             android:gravity="center"
             android:maxLength="2"
             android:text="@={viewmodel.scheduleAlarmHH}"
             android:textColor="@color/themecolor"
             android:layout_marginLeft="20dp" />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text=":"
             android:textColor="@color/themecolor"
             android:textSize="20dp"
             android:layout_gravity="center"
             android:layout_marginLeft="10dp"/>

         <EditText
             android:layout_width="40dp"
             android:layout_height="wrap_content"
             android:id="@+id/edit_Alarm_MM"
             android:hint="00"
             android:textColorHint="@color/themecolor"
             android:inputType="number"
             android:textSize="20dp"
             android:gravity="center"
             android:text="@={viewmodel.scheduleAlarmMM}"
             android:maxLength="2"
             android:textColor="@color/themecolor"
             android:layout_marginLeft="10dp" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:text="전"
             android:textColor="@color/themecolor"
             android:gravity="center"
             android:textSize="24dp"
             android:layout_marginLeft="10dp"/>
      </LinearLayout>

      <androidx.appcompat.widget.AppCompatButton
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="전송"
          android:textStyle="bold"
          android:layout_marginTop="40dp"
          android:background="@drawable/btn_theme"
          android:textColor="@color/themecolor"
          android:onClick="@{()->viewmodel.fnAppointmentRequest()}"
          />
   </LinearLayout>
</layout>

