<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="mainviewmodel"
            type="com.example.appointment.ViewModel.MainViewmodel" />
        <variable
            name="singviewmodel"
            type="com.example.appointment.ViewModel.SignUp.Signup_Viewmodel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".UI.Activity.Profile.AddAdressActivity">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            app:title="주소"
            app:titleTextColor="@color/themecolor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/line_toolbar"
            android:background="@color/themecolor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="주소 입력"
            android:padding="20dp"
            android:textSize="24dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColorHint="@color/themecolor"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_zipcode"
                    android:hint="우편번호"
                    android:inputType="number"
                    android:editable="false"
                    android:focusable="false"
                    android:textColor="@color/themecolor"
                    android:text="@={singviewmodel.signUpZoneCode}" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_search_address"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="찾기"
                android:background="@drawable/btn_theme"
                android:textColor="@color/themecolor"
                android:textStyle="bold"
                android:onClick="@{()->singviewmodel.searchAddress()}" />


        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/themecolor">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/address"
                android:inputType="text"
                android:editable="false"
                android:focusable="false"
                android:textColor="@color/themecolor"
                android:text="@={singviewmodel.signUpAddress}" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/themecolor">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_detail_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/address_detail"
                android:inputType="text"
                android:textColor="@color/themecolor"
                android:text="@={singviewmodel.signUpDetailAddress}" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="주소 이름"
            android:padding="20dp"
            android:textSize="24dp"
            android:textStyle="bold"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:textColorHint="@color/themecolor">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_address_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ex : 집, 학교 등"
                android:inputType="text"
                android:textColor="@color/themecolor"
                android:text="@={singviewmodel.addressName}"/>
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_address_save"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            android:text="저장"
            android:background="@drawable/btn_theme"
            android:textColor="@color/themecolor"
            android:textStyle="bold"
            android:onClick="@{()->singviewmodel.addAddress()}"/>

    </LinearLayout>
</layout>